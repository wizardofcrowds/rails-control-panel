<h1>Create a new rails app environment</h1>

<%= error_messages_for :app %>
<% form_for :app, :url => user_apps_path(@user) do |f| -%>

<p><%= label_tag 'name' %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'description' %><br/>
<%= f.text_area :description %></p>

<p><%= submit_tag 'Create' %></p>
<% end -%>
